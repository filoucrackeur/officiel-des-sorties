			div.large-12.columns
				h2.fg-bleu-fonce Inscription
		div.row
			div.large-5
				label
					input(type="text" id="lastname" name="lastname" placeholder="Nom" autocomplete="off")

		div.row
			div.large-5
				label
					input(type="text" id="firstname" name="firstname" placeholder="Pr√©nom" autocomplete="off")
			
					input(type="radio" id="sex_f" name="sex" value='F')
