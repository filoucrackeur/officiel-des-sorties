					input(type="radio" id="sex_h" name="sex" value='M')
					label(for="sex_h") Homme
		label
			input(type="email" id="email" name="email" placeholder="Email" autocomplete="off")
		label
			input(type="password" id="password" name="password" placeholder="Mot de passe" autocomplete="off")
		label
			input(type="text" id="pseudo" name="pseudo" placeholder="Choisir un pseudo" autocomplete="off")

		div.row
			div.large-5
				label
					input(type="text" id="birth" name="birth" placeholder="Date de naissance" autocomplete="off")
		label
			input(type="text" id="address" name="address" placeholder="Adresse" autocomplete="off")

		div.row
			div.large-5
				label
					input(type="text" id="zipcode" name="zipcode" placeholder="Code postal" autocomplete="off")
		div.text-center
			input.button(type="submit" value="Finaliser mon inscription")